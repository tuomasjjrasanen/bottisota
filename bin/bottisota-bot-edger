#!/usr/bin/env python3

import bottisota
import bottisota.bus

botconn = bottisota.bus.BotConnection()

botconn.syscall_clk()
botconn.syscall_drv(270, bottisota.DRV_SPEED_MAX)
while True:
    x, y, speed, direction = botconn.syscall_pos()
    if speed == 0:
        botconn.syscall_drv((direction + 90) % 360, bottisota.DRV_SPEED_MAX)
