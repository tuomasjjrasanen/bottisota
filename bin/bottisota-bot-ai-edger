#!/usr/bin/env python3

import bottisota
import bottisota.bus

botconn = bottisota.bus.BotConnection()

botconn.sys_clk()
botconn.sys_drv(bottisota.DRV_SPEED_MAX, 270)
while True:
    err, x, y, speed, direction = botconn.sys_pos()
    if speed == 0:
        botconn.sys_drv(bottisota.DRV_SPEED_MAX, (direction + 90) % 360)

botconn.disconnect()
